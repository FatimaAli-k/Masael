<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="160dp"-->
<!--            android:background="@drawable/d0"-->
<!--            android:layout_marginBottom="30dp"-->
<!--            android:layout_alignParentTop="true"-->
<!--            />-->
        <include layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerInParent="true"

        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_gravity="center"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <ImageButton
            android:id="@+id/division1"
            android:layout_width="@dimen/img_div_width"
            android:layout_height="@dimen/img_div_height"
            android:layout_margin="5dp"
            android:background="@drawable/d1"

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:text="@string/division1"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="21sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/division2"
                android:layout_width="@dimen/img_div_width"
                android:layout_height="@dimen/img_div_height"
                android:layout_margin="5dp"
                android:background="@drawable/d2"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:text="@string/division2"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="21sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_gravity="center"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/division3"
                android:layout_width="@dimen/img_div_width"
                android:layout_height="@dimen/img_div_height"
                android:layout_margin="5dp"
                android:background="@drawable/d1"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:text="@string/division3"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="21sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/division4"
                android:layout_width="@dimen/img_div_width"
                android:layout_height="@dimen/img_div_height"
                android:layout_margin="5dp"
                android:background="@drawable/d2"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:text="@string/division4"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="21sp"/>
        </LinearLayout>

    </LinearLayout>
    <ImageButton
        android:id="@+id/all"
        android:layout_width="@dimen/img_div_width"
        android:layout_height="@dimen/img_div_height"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:background="@drawable/d2"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/myfont"
        android:text="@string/all"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="21sp"/>
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>